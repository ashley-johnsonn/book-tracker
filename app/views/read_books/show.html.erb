<div class="max-w-4xl mx-auto font-serif">
  <!-- Back button at top -->
  <%= link_to "â† Back to All Books", read_books_path, 
      class: "text-gray-600 hover:text-gray-800 mb-4 inline-block" %>
  
  <!-- Book details card -->
  <div class="bg-white border border-gray-200 rounded-lg p-8 shadow-lg">
    <div class="flex gap-8 mb-6">
      <!-- Cover Image -->
      <% if @read_book.cover_image_url.present? %>
        <%= image_tag @read_book.cover_image_url, 
            class: "w-48 h-64 object-cover rounded shadow", 
            alt: @read_book.title %>
      <% else %>
        <div class="w-48 h-64 bg-gray-200 rounded flex items-center justify-center text-gray-400">
          No Image
        </div>
      <% end %>
      
      <!-- Book Info -->
      <div class="flex-1">
        <h1 class="text-4xl font-bold text-gray-800 mb-2"><%= @read_book.title %></h1>
        <p class="text-xl text-gray-600 mb-4">by <%= @read_book.author %></p>
        
        <div class="flex gap-4 text-sm text-gray-500 mb-6">
          <span>ğŸ“… Published: <%= @read_book.year_published || "Unknown" %></span>
          <span>âœ“ Finished: <%= @read_book.date_finished&.strftime("%B %d, %Y") || "Not finished" %></span>
          <span>â­ Rating: <%= @read_book.rating %>/5</span>
        </div>
        
        <div class="prose">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">Description</h2>
          <p class="text-gray-600 leading-relaxed"><%= @read_book.description %></p>
        </div>
      </div>
    </div>
    
    <!-- Action buttons -->
    <div class="flex gap-3 pt-6 border-t">
      <%= link_to "Edit Book", edit_read_book_path(@read_book), 
          class: "bg-[#A3A695] hover:bg-[#12240F] text-white font-semibold py-2 px-6 rounded-lg transition" %>
      <%= link_to "Delete Book", read_book_path(@read_book), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "bg-red-500 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded-lg transition" %>
    </div>
  </div>
</div>